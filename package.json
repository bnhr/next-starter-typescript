{
  "name": "next-starter-typescript",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type:check": "tsc --pretty --noEmit",
    "lint": "eslint '*/**/*.{ts,tsx}' --cache --quiet",
    "lint:fix": "eslint '*/**/*.{ts,tsx}' --cache --fix",
    "format": "prettier --write .",
    "fix:all": "yarn type:check && yarn lint:fix && yarn format",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@next/eslint-plugin-next": "12.1.6",
    "@types/node": "16.11.33",
    "@types/react": "17.0.44",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint '*/**/*.{ts,tsx}' --cache --fix"
    ],
    "src/**/*.{ts,tsx,json,css,scss,md,mdx,js}": [
      "prettier --write ."
    ]
  }
}
